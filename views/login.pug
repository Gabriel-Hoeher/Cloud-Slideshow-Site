body 
    div(class="hero is-large login-hero")
        div(class="hero-body login-hero-body has-text-centered")
            h1(class="title is-1")='Login To Access Gallery'
        div(class="hero-foot")
            div(class="container has-text-centered")
                h2(class="title")=`Enter Renata's last name?`
                form(action="/", method="GET")
                    div(class="columns is-gapless")
                        p(class="control has-icons-left column")
                            input(name="login", type="password", class="input is-large")
                            span(class="icon is-left")
                                i(class="fas fa-lock")
                        p(class="control has-icons-left column is-narrow")
                            input(type="submit", class="button is-large", value="Submit")