//-  Creates slideshow and gallery 
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0 user-scalability=0.0")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css")
        link(rel="stylesheet", href="styles/home.css", content="application/css; charset=utf-8")
        link(rel="stylesheet", href="styles/animation.css", content="application/css; charset=utf-8")
        link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous")
        script(language="JavaScript" type="module" src="scripts/home.js")
        script(src="https://sdk.amazonaws.com/js/aws-sdk-2.1046.0.min.js")
        script(language="JavaScript" type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.min.js")
        title TitleHere
    
block content
body
    div(class="columns is-gapless")
        div(class="column is-narrow")
            section(class="hero is-small small-hero")
                div(class="hero-body")
                    h2(class="title", id="title")='Renata Maria Alati'
        div(class="column")
            div(class="hero is-small small-hero tabs is-centered")
                ul(class="subtitle")
                    li(class="is-active", id="gallerySelect")
                        a()='Gallery'
                    li(id="videoSelect")
                        a()='Video'
        div(class="column is-narrow is-flex is-hidden-mobile")
            section(class="hero is-small small-hero")
                div(class="hero-body")
                    div(class="dropdown")
                        div(class="dropdown-trigger")
                            button(class="button" aria-haspopup="true", aria-controls="dropdown-menu")
                                span(class="icon")
                                    i(class="fas fa-upload")
                        div(class="dropdown-menu", id="dropdown-menu", role="menu")
                            div(class="dropdown-content")
                                div(class="file is-boxed is-small has-name dropdown-item")
                                    label(class="file-label")
                                        input(type="file", name='image', class="file-input", id='fileInput')
                                        span(class="file-cta")
                                            span(class="file-icon")
                                                i(class="fas fa-upload center")
                                            span(class="file-label")='Select File'
                                        span(class="file-name has-text-centered")
                                button(class="dropdown-item button has-text-centered uploadBtn")="Upload"
                    button(class='pause', class="button pause")
                        span(class="file-icon center")
                            i(class="fas fa-play")
                    button(class="button mute") 
                        span(class="file-icon center")
                            i(class="fas fa-volume-up")
    div(id="galleryTab")
        div(class="container card")
            div(class="card-image has-text-centered")
                figure(class="image is-inline-block")
                    img(id='mainImg' class='puff-in-center')
        div(id="btnColumn" class="columns is-centered")
            div(class="column")
                button(class='navBtn button', id='prevBtn')
                    span(class="icon center")
                        i(class="fas fa-backward fa-2x")
            div(class="container has-text-centered is-hidden-mobile")
                div(id='gallery', class="columns")
            div(class="column")
                button(class='navBtn button', id='nextBtn')
                    span(class="icon center")
                        i(class="fas fa-forward fa-2x")

    div(class="is-narrow is-hidden-desktop")
            section(class="hero is-small small-hero")
                div(class="hero-body center")
                    div(class="dropdown")
                        div(class="dropdown-trigger")
                            button(class="button" aria-haspopup="true", aria-controls="dropdown-menu")
                                span(class="icon")
                                    i(class=" fas fa-upload")
                        div(class="dropdown-menu", id="dropdown-menu", role="menu")
                            div(class="dropdown-content")
                                div(class="file is-boxed is-small has-name dropdown-item")
                                    label(class="file-label")
                                        input(type="file", name='image', class="file-input", id='fileInputMob')
                                        span(class="file-cta")
                                            span(class="file-icon")
                                                i(class="fas fa-upload center")
                                            span(class="file-label")='Select File'
                                        span(class="file-name has-text-centered")
                                button(class="dropdown-item button has-text-centered uploadBtn")="Upload"
                    button(class='pause', class="button pause")
                        span(class="file-icon center")
                            i(class="fas fa-play")
                    button(class="button mute") 
                        span(class="file-icon center")
                            i(class="fas fa-volume-up")
    div(id='playlist')
        audio(autoplay)